<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <TextView
        android:id="@+id/commentTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/roboto_thin"
        android:textColor="@color/pleoContentTextDark"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Comment"
        android:text="Comment"/>

    <EditText
        android:id="@+id/commentEditable"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/roboto_regular"
        android:textColor="@color/pleoContentTextDark"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/sendCommentIcon"
        app:layout_constraintEnd_toStartOf="@+id/sendCommentIcon"
        app:layout_constraintStart_toStartOf="@+id/commentTitle"
        app:layout_constraintTop_toBottomOf="@+id/commentTitle"
        android:background="@null" />

    <ImageView
        android:id="@+id/sendCommentIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/send_comment_icon" />


</androidx.constraintlayout.widget.ConstraintLayout>